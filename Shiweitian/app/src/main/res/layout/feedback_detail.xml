<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dreamers.shiweitian.Home_page.MainActivity"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/img1"
        android:layout_width="20dp"
        android:layout_height="28dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="28dp"/>
    <ImageView
        android:id="@+id/img2"
        android:layout_toRightOf="@+id/img1"
        android:layout_width="20dp"
        android:layout_height="28dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="121dp"/>
    <ImageView
        android:id="@+id/img3"
        android:layout_toRightOf="@+id/img2"
        android:layout_width="20dp"
        android:layout_height="28dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="121dp"/>

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img1"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/dot1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="28dp"
            android:src="@drawable/dot1_gray"/>
        <ImageView
        android:id="@+id/dot2"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@+id/dot1"
        android:layout_marginLeft="14dp"
        android:src="@drawable/dot2_gray"/>
        <ImageView
            android:id="@+id/dot3"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/dot2"
            android:layout_marginLeft="14dp"
            android:src="@drawable/dot2_gray"/>
        <ImageView
            android:id="@+id/dot4"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/dot3"
            android:layout_marginLeft="14dp"
            android:src="@drawable/dot2_gray"/>
        <ImageView
            android:id="@+id/dot5"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/dot4"
            android:layout_marginLeft="14dp"
            android:src="@drawable/dot2_gray"/>
        <ImageView
            android:id="@+id/dot6"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/dot1_gray"/>
        <ImageView
            android:id="@+id/dot7"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/dot6"
            android:layout_marginLeft="14dp"
            android:src="@drawable/dot2_gray"/>
        <ImageView
            android:id="@+id/dot8"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/dot7"
            android:layout_marginLeft="14dp"
            android:src="@drawable/dot2_gray"/>
        <ImageView
            android:id="@+id/dot9"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/dot8"
            android:layout_marginLeft="14dp"
            android:src="@drawable/dot2_gray"/>
        <ImageView
            android:id="@+id/dot10"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/dot9"
            android:layout_marginLeft="14dp"
            android:src="@drawable/dot2_gray"/>
        <ImageView
            android:id="@+id/dot11"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/dot10"
            android:layout_marginLeft="14dp"
            android:src="@drawable/dot1_gray"/>

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dot1"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:textColor="#aaa7a7a7"
            android:text="已提交"/>
        <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dot6"
        android:layout_toRightOf="@+id/tv1"
        android:layout_marginLeft="101dp"
        android:layout_marginTop="5dp"
        android:textColor="#aaa7a7a7"
        android:text="已受理"/>
        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dot11"
            android:layout_toRightOf="@+id/tv2"
            android:layout_marginLeft="101dp"
            android:layout_marginTop="5dp"
            android:textColor="#aaa7a7a7"
            android:text="已完成"/>

    </RelativeLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_height="10dp"
        android:layout_below="@+id/r1"
        android:background="#aae6e3e3" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1">

        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:text="举报对象："/>
        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/t1"
            android:text="文字"/>

        <View
            android:id="@+id/line2"
            android:layout_width="fill_parent"
            android:layout_below="@+id/t1"
            android:layout_marginTop="8dp"
            android:layout_height="1dp"
            android:background="#aae6e3e3" />

        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/line2"
            android:layout_marginTop="8dp"
            android:text="地址："/>
        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/line2"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/t2"
            android:text="文字"/>

        <View
            android:id="@+id/line3"
            android:layout_width="fill_parent"
            android:layout_below="@+id/t2"
            android:layout_marginTop="8dp"
            android:layout_height="1dp"
            android:background="#aae6e3e3" />

        <TextView
            android:id="@+id/t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/line3"
            android:layout_marginTop="8dp"
            android:text="举报原因："/>
        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/line3"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/t3"
            android:text="文字"/>

        <View
            android:id="@+id/line4"
            android:layout_width="fill_parent"
            android:layout_below="@+id/t3"
            android:layout_marginTop="8dp"
            android:layout_height="1dp"
            android:background="#aae6e3e3" />

        <TextView
            android:id="@+id/t4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/line4"
            android:layout_marginTop="8dp"
            android:text="问题详情："/>
        <TextView
            android:id="@+id/text4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/line4"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/t4"
            android:text="文字"/>

        <View
            android:id="@+id/line5"
            android:layout_width="fill_parent"
            android:layout_below="@+id/t4"
            android:layout_marginTop="8dp"
            android:layout_height="10dp"
            android:background="#aae6e3e3" />
    </RelativeLayout>





</RelativeLayout>
