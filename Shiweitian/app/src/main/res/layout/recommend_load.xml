<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/layout1"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_selecter">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="150dp"
                    android:layout_height="132dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/caomei"/>
                <TextView
                    android:id="@+id/title1"
                    android:layout_width="180dp"
                    android:layout_height="35dp"
                    android:text="草莓农药超标，草莓种植普遍使用违禁农药"
                    android:layout_below="@+id/img1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:id="@+id/source1"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:textColor="#aac8c8c8"
                    android:textSize="13sp"
                    android:text="大连晚报"
                    android:layout_below="@+id/title1"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:id="@+id/date1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="#aac8c8c8"
                    android:textSize="13sp"
                    android:text="2017年1月16日"
                    android:layout_below="@+id/title1"
                    android:layout_marginLeft="80dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_below="@id/source1"/>

            </RelativeLayout>
            <View
                android:id="@+id/l1"
                android:layout_width="1dp"
                android:layout_height="215dp"
                android:layout_toRightOf="@+id/layout1"
                android:background="#aae6e3e3"
                android:layout_gravity="center_horizontal"/>

            <RelativeLayout
                android:id="@+id/layout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/l1"
                android:background="@drawable/layout_selecter">
                <TextView
                    android:id="@+id/title2"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="10种备监食品出炉，蔬菜最受大家关注"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:id="@+id/source2"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:textColor="#aac8c8c8"
                    android:textSize="13sp"
                    android:text="钱江晚报"
                    android:layout_below="@+id/title2"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:id="@+id/date2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="#aac8c8c8"
                    android:textSize="13sp"
                    android:text="2017年1月16日"
                    android:layout_below="@+id/title2"
                    android:layout_marginLeft="80dp"/>
                <View
                    android:id="@+id/l2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/source2"
                    android:background="#aae6e3e3"
                    android:layout_marginTop="8dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout2"
                android:layout_toRightOf="@+id/l1"
                android:background="@drawable/layout_selecter">
                <TextView
                    android:id="@+id/title3"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="保健食品禁使用“堪比药品”等宣传语"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:id="@+id/source3"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:textColor="#aac8c8c8"
                    android:textSize="13sp"
                    android:text="信息时报"
                    android:layout_below="@+id/title3"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:id="@+id/date3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="#aac8c8c8"
                    android:textSize="13sp"
                    android:text="2017年1月16日"
                    android:layout_below="@+id/title3"
                    android:layout_marginLeft="80dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/source3"
                    android:background="#aae6e3e3"
                    android:layout_marginTop="8dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/l1"
                android:layout_below="@+id/layout3"
                android:background="@drawable/layout_selecter">
                <TextView
                    android:id="@+id/title4"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="食堂全部采购有机、绿色食品，入口食品均可溯啦啦啦啦啦啦啦啦"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:id="@+id/source4"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:textColor="#aac8c8c8"
                    android:textSize="13sp"
                    android:text="重庆晨报"
                    android:layout_below="@+id/title4"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:id="@+id/date4"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="#aac8c8c8"
                    android:textSize="13sp"
                    android:text="2017年1月16日"
                    android:layout_below="@+id/title4"
                    android:layout_marginLeft="80dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_below="@id/source4"/>
            </RelativeLayout>

            <View
                android:id="@+id/l3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/layout1"
                android:background="#aae6e3e3"/>

            <RelativeLayout
                android:id="@+id/layout5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l3"
                android:background="@drawable/layout_selecter">
                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="98dp"
                    android:layout_height="98dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/naifen"/>
                <TextView
                    android:id="@+id/title5"
                    android:layout_width="98dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/img2"
                    android:layout_marginLeft="15dp"
                    android:text="市民买进口奶粉和食品将有好去处"/>
                <TextView
                    android:id="@+id/source5"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title5"
                    android:layout_marginLeft="60dp"
                    android:textColor="#aac8c8c8"
                    android:textSize="13sp"
                    android:text="深圳商报"/>
                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/img2"/>
                <View
                    android:layout_width="100dp"
                    android:layout_height="8dp"
                    android:layout_below="@+id/source5"/>
            </RelativeLayout>
            <View
                android:id="@+id/l4"
                android:layout_width="1dp"
                android:layout_height="185dp"
                android:layout_toRightOf="@+id/layout5"
                android:layout_below="@+id/l3"
                android:background="#aae6e3e3"
                android:layout_gravity="center_horizontal"/>

            <RelativeLayout
                android:id="@+id/layout6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/l4"
                android:layout_below="@+id/l3"
                android:background="@drawable/layout_selecter">
                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="98dp"
                    android:layout_height="98dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/lajishipin"/>
                <TextView
                    android:id="@+id/title6"
                    android:layout_width="98dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/img3"
                    android:layout_marginLeft="10dp"
                    android:text="这些所谓的“垃圾食品”其实并不垃圾"/>
                <TextView
                    android:id="@+id/source6"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title6"
                    android:layout_marginLeft="58dp"
                    android:textColor="#aac8c8c8"
                    android:textSize="13sp"
                    android:text="网易新闻"/>
                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/img3"/>
                <View
                    android:layout_width="100dp"
                    android:layout_height="8dp"
                    android:layout_below="@+id/source6"/>
            </RelativeLayout>
            <View
                android:id="@+id/l5"
                android:layout_width="1dp"
                android:layout_height="185dp"
                android:layout_toRightOf="@+id/layout6"
                android:layout_below="@id/l3"
                android:background="#aae6e3e3"
                android:layout_gravity="center_horizontal"/>

            <RelativeLayout
                android:id="@+id/layout7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/l5"
                android:layout_below="@+id/l3"
                android:background="@drawable/layout_selecter">
                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="98dp"
                    android:layout_height="98dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/buhegeshipin"/>
                <TextView
                    android:id="@+id/title7"
                    android:layout_width="98dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/img4"
                    android:layout_marginLeft="10dp"
                    android:text="15种不合格产品包括京安牌太平果等下架"/>
                <TextView
                    android:id="@+id/source7"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title7"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="7dp"
                    android:textColor="#aac8c8c8"
                    android:textSize="13sp"
                    android:text="北京晨报"/>
            </RelativeLayout>

            <View
                android:id="@+id/l6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#aae6e3e3"
                android:layout_below="@+id/layout5" />

            <RelativeLayout
                android:id="@+id/layout8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l6"
                android:background="@drawable/layout_selecter">
                <ImageView
                    android:id="@+id/img5"
                    android:layout_width="155dp"
                    android:layout_height="135dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/mocha1"/>
                <TextView
                    android:id="@+id/title8"
                    android:layout_width="155dp"
                    android:layout_height="35dp"
                    android:layout_below="@+id/img5"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"
                    android:text="你真的了解抹茶吗?揭秘关于抹茶的冷知识"/>
                <TextView
                    android:id="@+id/source8"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title8"
                    android:layout_marginLeft="110dp"
                    android:textColor="#aac8c8c8"
                    android:textSize="13sp"
                    android:text="中国日报"/>
                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/img5"/>
                <View
                    android:layout_width="100dp"
                    android:layout_height="8dp"
                    android:layout_below="@+id/source8"/>
            </RelativeLayout>
            <View
                android:id="@+id/l7"
                android:layout_width="1dp"
                android:layout_height="260dp"
                android:background="#aae6e3e3"
                android:layout_toRightOf="@+id/layout8"
                android:layout_below="@+id/l6"
                android:layout_gravity="center_horizontal"/>

            <RelativeLayout
                android:id="@+id/layout9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l6"
                android:layout_toRightOf="@+id/l7"
                android:background="@drawable/layout_selecter">

                <ImageView
                    android:id="@+id/img6"
                    android:layout_width="155dp"
                    android:layout_height="135dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/makalong"/>
                <TextView
                    android:id="@+id/title9"
                    android:layout_width="155dp"
                    android:layout_height="35dp"
                    android:layout_below="@+id/img6"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:text="马卡龙到底是什么,为什么它这么贵？"/>
                <TextView
                    android:id="@+id/source9"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title9"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:textColor="#aac8c8c8"
                    android:textSize="13sp"
                    android:text="新浪新闻"/>

            </RelativeLayout>


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>